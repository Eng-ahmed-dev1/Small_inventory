<Window x:Class="Inventory.Views.AdminDashBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventory.Views"
        mc:Ignorable="d"
        Title="AdminDashBoard" Height="450" Width="800">
      <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Add New Product"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="DarkBlue"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" >

            <StackPanel Orientation="Horizontal">
                <Label Content="Name:" Width="100" FontWeight="Bold"/>
                <TextBox x:Name="TxtName" Width="250"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Description:" Width="100" FontWeight="Bold"/>
                <TextBox x:Name="TxtDescription" Width="250"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Price:" Width="100" FontWeight="Bold"/>
                <TextBox x:Name="TxtPrice" Width="250"/>
            </StackPanel>

            <Button Content="Add Product"
                    Width="150"
                    Height="35"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Background="Blue"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="AddProduct_Click"/>
        </StackPanel>
    </Grid>
</Window>
