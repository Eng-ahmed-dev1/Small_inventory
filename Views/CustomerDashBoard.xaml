<Window x:Class="Inventory.Views.CustomerDashBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventory.Views"
        mc:Ignorable="d"
        Title="CustomerDashBoard" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.ColumnSpan="2" Height="30" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                <Label FontSize="17" FontWeight="ExtraBold"  Content="Hello"></Label>
                <Label x:Name="LabName" FontSize="17" FontWeight="ExtraBold" Width="100"  ></Label>
            </StackPanel>
            <Label FontSize="17" FontWeight="ExtraBold" Content="Products" Margin="51,63,10,-63"/>
            <ComboBox Name="Comb" Grid.Column="0" Margin="51,98,10,-98" />

        </Grid>
        <Grid  VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="0" Margin="21,90,0,0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                <Label FontSize="17" FontWeight="ExtraBold" Height="38" Width="134" Content="Quantity"></Label>
                <TextBox x:Name="Quant" BorderBrush="Black" BorderThickness="3" Height="30" Width="120"></TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Click="AddToCart" Grid.Column="1" FontSize="16" FontWeight="Bold" Height="30" Background="Blue" Foreground="White" Content="Add To Cart " Width="120" Margin="73,22,73,18" ></Button>
        </Grid>
        <DataGrid 
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="10"
            AutoGenerateColumns="False"
            RowBackground="White"
            AlternatingRowBackground="Gray"
            GridLinesVisibility="Vertical"
            VerticalGridLinesBrush="Black"
            IsReadOnly="True"
            FontSize="12"
            FontWeight="bold"
            BorderThickness="2"
            BorderBrush="Black"
            Name="DGD"
            >

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="BorderBrush" Value="Black"></Setter>
                    <Setter Property="VerticalAlignment" Value="Bottom"></Setter>
                    <Setter Property="Margin" Value="4,0"></Setter>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="CustId" Width="*" Binding="{Binding CustId}" ></DataGridTextColumn>
                <DataGridTextColumn Header="ProID" Width="*" Binding="{Binding ProID}" ></DataGridTextColumn>
                <DataGridTextColumn Header="CartId" Width="*" Binding="{Binding CartId}" ></DataGridTextColumn>
                <DataGridTextColumn Header="Quantity" Width="*" Binding="{Binding Quantity}" ></DataGridTextColumn>
      
            </DataGrid.Columns>
            
        </DataGrid>
    </Grid>
</Window>
